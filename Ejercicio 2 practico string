#include <iostream>
#include <string>

using namespace std;

int main() {
    string cadena;
    cout << "Introduce una cadena de texto: ";
    getline(cin, cadena);

    int contadorPalabras = 0;
    int i = 0;

    while (cadena[i] != '\0') {
        // Ignora los espacios iniciales
        while (cadena[i] == ' ') {
            i++;
        }

        if (cadena[i] != '\0') {
            contadorPalabras++;

            // Avanza al siguiente espacio o al final de la cadena
            while (cadena[i] != ' ' && cadena[i] != '\0') {
                i++;
            }
        }
    }

    cout << "El nÃºmero de palabras en la cadena es: " << contadorPalabras << endl;

    return 0;
}
